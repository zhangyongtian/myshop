@charset "UTF-8";
/* 颜色变量 */
/**
 * 自定义颜色
 */
.customHead {
  height: 400rpx;
  overflow: hidden;
  position: relative;
}
.customHead .bg {
  width: 100%;
  height: 100%;
  background: #000;
}
.customHead .bg .bgimg {
  width: 100%;
  height: 100%;
  -webkit-filter: blur(30rpx);
          filter: blur(30rpx);
  -webkit-transform: scale(2);
          transform: scale(2);
}
.customHead .container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.customHead .container .service {
  padding-left: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
}
.customHead .container .service .manage {
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: flex-start;
  align-items: center;
}
.customHead .container .body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 45rpx;
  height: 100px;
  transition: 0.3s;
}
.customHead .container .body .brand {
  width: 580rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: flex-start;
  align-items: center;
}
.customHead .container .body .brand .pic {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
  transition: 0.3s;
}
.customHead .container .body .brand .pic .img {
  width: 100%;
  height: 100%;
}
.customHead .container .body .brand .text {
  flex: 1;
  padding: 0 30rpx;
  color: #fff;
}
.customHead .container .body .brand .text .title {
  font-size: 36rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
}
.customHead .container .body .brand .text .title .font {
  margin-right: 10rpx;
}
.customHead .container .body .brand .text .des {
  font-size: 26rpx;
  width: 100%;
  opacity: 0.8;
  padding-top: 5rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.customHead .container .body .code {
  width: 80rpx;
  height: 80rpx;
  border-left: 1px solid rgba(255, 255, 255, 0.6);
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}
.customHead .container .body .code .pic {
  width: 40rpx;
  height: 40rpx;
}
.customHead .container .body .code .pic .img {
  width: 100%;
  height: 100%;
}
.customHead .container .body .code .pay {
  font-size: 22rpx;
  color: #fff;
  text-align: center;
}
.customHead .container .body.fold {
  padding: 0 30rpx;
}
.customHead .container .body.fold .brand .pic {
  width: 60rpx;
  height: 60rpx;
}
.customHead .container .body.fold .brand .text {
  padding-left: 15rpx;
}
.customHead .container .body.fold .brand .text .title {
  font-size: 28rpx;
}
.customHead .container .body.fold .brand .text .title .icon {
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}
.customHead .container .body.fold .brand .text .des {
  display: none;
}
.customHead .container .body.fold .code {
  display: none;
}
.brandWrapper {
  padding: 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}
.brandWrapper .close {
  background: #F7F7F7;
  padding: 5rpx 20rpx;
  border-radius: 30rpx;
}
.brandWrapper .brand {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  padding: 30rpx 0;
}
.brandWrapper .brand .pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.brandWrapper .brand .pic .img {
  width: 100%;
  height: 100%;
}
.brandWrapper .brand .title {
  font-size: 34rpx;
  color: #000;
  padding: 10rpx 0;
}
.brandWrapper .brand .des {
  font-size: 28rpx;
  color: #676767;
}
.brandWrapper .cell {
  width: 100%;
  padding: 30rpx 0 100rpx;
}

