@charset "UTF-8";
/* 颜色变量 */
/**
 * 自定义颜色
 */
.goodsLayout .wrapper {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 25rpx;
  border-radius: 15rpx;
}
.goodsLayout .wrapper .title {
  font-size: 38rpx;
}
.goodsLayout .wrapper .list .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
}
.goodsLayout .wrapper .list .row .left {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 400rpx;
}
.goodsLayout .wrapper .list .row .left .img {
  width: 64rpx;
  height: 64rpx;
  border-radius: 10rpx;
}
.goodsLayout .wrapper .list .row .left .name {
  padding-left: 15rpx;
  flex: 1;
  font-size: 30rpx;
}
.goodsLayout .wrapper .list .row .center {
  width: 100rpx;
  text-align: center;
}
.goodsLayout .wrapper .list .row .right {
  flex: 1;
  text-align: right;
  font-weight: bold;
}
.goodsLayout .wrapper .list .row .right .big {
  font-size: 34rpx;
}
.goodsLayout .wrapper .list .row .right .small {
  font-size: 22rpx;
  color: #a7a7a7;
  text-decoration: line-through;
}
.goodsLayout .wrapper .total {
  padding: 30rpx 0;
  text-align: right;
  font-size: 30rpx;
  color: #a7a7a7;
}
.goodsLayout .wrapper .total .big {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}

