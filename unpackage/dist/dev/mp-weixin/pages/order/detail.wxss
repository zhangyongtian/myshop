@charset "UTF-8";
/* 颜色变量 */
/**
 * 自定义颜色
 */
page {
  background: #F7F7F7;
}
.orderDetail .payment {
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: flex-start;
  align-items: center;
  padding: 50rpx 30rpx;
  position: relative;
}
.orderDetail .payment .text {
  padding-left: 20rpx;
  color: #000;
}
.orderDetail .payment .text .big {
  font-size: 44rpx;
  font-weight: bold;
}
.orderDetail .payment .text .small {
  font-size: 28rpx;
  color: #a7a7a7;
}
.orderDetail .payment .complete {
  font-size: 32rpx;
  color: #a7a7a7;
  font-weight: bold;
  border: 6rpx solid #a7a7a7;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: center;
  align-items: center;
  -webkit-transform: rotate(-20deg);
          transform: rotate(-20deg);
  position: absolute;
  right: 100rpx;
  top: 80rpx;
}
.orderDetail .payment .complete::after {
  display: block;
  content: "";
  border: 2rpx solid #a7a7a7;
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  -webkit-transform: scale(0.89);
          transform: scale(0.89);
  top: 0;
  left: 0;
  box-sizing: border-box;
}
.orderDetail .info {
  background: #fff;
  padding: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
}
.orderDetail .info .delivery {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderDetail .info .delivery .btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: center;
  align-items: center;
  width: 250rpx;
  height: 60rpx;
  border-radius: 80rpx;
  background: #19BE6B;
  color: #fff;
}
.orderDetail .info .delivery .btn text {
  font-size: 34rpx;
}
.orderDetail .info .delivery.other .btn {
  background: #FF9100;
}
.orderDetail .info .delivery.other .time {
  font-size: 32rpx;
  color: #576b95;
}
.orderDetail .info .viewOut {
  padding: 30rpx 0;
}
.orderDetail .info .viewOut .title {
  font-size: 40rpx;
  padding-bottom: 15rpx;
}
.orderDetail .info .viewOut .row {
  font-size: 30rpx;
  padding: 15rpx 0;
  color: #676767;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderDetail .goodsList {
  margin-top: 30rpx;
}

